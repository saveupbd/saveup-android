<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="1dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deals_item_background"
        android:elevation="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5">

        <ImageView
            android:id="@+id/productimage"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/detailLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/productimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fifty_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Rs 3400"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fifty_product_merchant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:textStyle="italic"
                android:layout_weight="1"
                android:gravity="start"
                android:text=""
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/fifty_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Rs 3400"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fifyt_product_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Rs 3400"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineview" />
</LinearLayout>
